    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".savegames.view.SaveGameActivity"></activity>
        <activity android:name=".register.RegisterActivity" />
        <activity android:name=".detalhes.view.DetalhesGamesActivity" />
        <activity android:name=".listagames.ListaGamesActivity" />
        <activity android:name=".login.view.LoginActivity"/>
        <activity android:name=".splash.SplashActivity">

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />


             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
    </application>

</manifest>